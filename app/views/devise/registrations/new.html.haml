.account__wrapper
  .account__wrapper__container
    .account__wrapper__container__signup
      .account__wrapper__container__signup__title.mouse-hover
        %a メールアドレスで会員登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .account__wrapper__container__signup__form
          .account__wrapper__container__signup__form__field
            = f.label :email, 'メールアドレス', class: 'account__wrapper__container__signup__form__field__label'
            = f.email_field :email, autofocus: true, required: true
          .account__wrapper__container__signup__form__field
            = f.label :password, 'パスワード', class: 'account__wrapper__container__signup__form__field__label'
            = f.password_field :password, required: true
          .account__wrapper__container__signup__form__field
            = f.label :password, 'パスワード(確認用)', class: 'account__wrapper__container__signup__form__field__label'
            = f.password_field :password_confirmation, required: true, autocomplete: "off"
          .account__wrapper__container__signup__form__field
            = f.label :password, 'ユーザーID ※登録後の変更はできません', class: 'account__wrapper__container__signup__form__field__label'
            = f.text_field :nickname, required: true, autocomplete: "off"
          .account__wrapper__container__signup__form__confirmation-request
            必ず
            %a{href: 'new_user_registration_path'} 利用規約
            をご確認ください。
          .account__wrapper__container__signup__form__button
            = f.submit "利用規約に同意してログイン"
      // Facebookログインは後ほど実装
      / = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      /   .account__wrapper__container__signup__fb-form
      /     .account__wrapper__container__signup__fb-form__button.mouse-hover
      /       = f.submit "Facebookで会員登録"
